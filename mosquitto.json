{
    "version": "2.0.2",
    "description": "An open-source message broker that implements the MQTT protocol.",
    "homepage": "https://mosquitto.org/",
    "license": "EPL-1.0",
    "architecture": {
        "64bit": {
            "url": "https://mosquitto.org/files/binary/win64/mosquitto-2.0.2-install-windows-x64.exe#dl.7z",
