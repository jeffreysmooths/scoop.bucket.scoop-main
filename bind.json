            "Move-Item \"$dir\\*.exe\", \"$dir\\*.dll\" \"$dir\\bin\" -Force",
            "Remove-Item \"$dir\\*\" -Exclude 'bin'"
        ]
    },
    "env_add_path": "bin",
    "persist": "etc",
    "checkver": "(?sm)Current-Stable<.*?/([\\d.]+)/",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://downloads.isc.org/isc/bind$majorVersion/$version/BIND$version.x64.zip"
            }
        }
    }
